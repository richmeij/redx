{
	"name": "@richmeij/redx",
	"version": "1.3.5",
	"description": "Boilerplate free Redux",
	"repository": {
		"type": "git",
		"url": "git@github.com:richmeij/redx.git"
	},
	"files": [
		"lib/"
	],
	"main": "lib/redx.js",
	"author": "Richard Meijer",
	"license": "MIT",
	"keywords": [
		"mobx",
		"redux",
		"state management",
		"react",
		"boilerplate"
	],
	"scripts": {
		"build": "babel src/lib --out-dir lib",
		"lint": "eslint src",
		"jest": "jest",
