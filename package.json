		"eslint": ">=4.18.2",
		"eslint-config-airbnb-base": "12.0.1",
		"eslint-plugin-import": "2.7.0",
		"jest": "20.0.4",
		"parcel-bundler": ">=1.10.3",
		"react": "16.3.x",
		"react-dom": "16.3.x",
